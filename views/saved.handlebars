<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Tech News Scraper</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/">Home</a></li>
      <li class="active"><a href="/saved">Saved Articles</a></li>
      <li><button id="scrapeBtn" class="btn btn-info">Scrape New Articles</button></li>
    </ul>
  </div>
</nav>
<div class="jumbotron">
  <div class="page-header">
    <h1>Keep Updated with the Latest News in Technology!</h1>
  </div>
</div>

<!-- Notes Modal -->
<div id="notesModal" class="modal fade" role="dialog">
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h2 id="notes-header"></h2>
    </div>
    <div class="modal-body">
      <div id="thenotes"></div>
      <textarea class="form-control" rows="4" id="newnote"></textarea>
    </div>
    <div class="modal-footer">
      <button type="button" id="savenote" class="btn btn-primary">SAVE NOTE</button>
    </div>
  </div>
</div>
</div>
  
<div class="container results">

  {{#each articles}}
	{{> articles/article-block showsaved=true}}
  {{else}}
	<div class="panel panel-warning">
	   <div class="panel-heading">Uh Oh. Looks like we don't have any saved articles.</div>
	</div>
  {{/each}}

</div>

<script src="/assets/js/app.js"></script>